<===> scope/redeclare/vars/input.scss
@use "sass:meta";
@mixin a($param: param) {
  $in-mixin: in-mixin;
  @content;
  param: $param;
  in-mixin: $in-mixin;
}

$global: global;

a {
  $in-style-rule: in-style-rule;
  @include meta.apply(meta.get-mixin("a")) {
    $param: in-include;
    $in-mixin: in-include;
    $global: in-include;
    $in-style-rule: in-include;
  }
  global: $global;
  in-style-rule: $in-style-rule;
}

