@use "sass:meta";
@mixin a($a: param) {@content(content-arg);}

$a: global;

a {
  $a: in-style-rule;
  @include meta.apply(meta.get-mixin("a")) using ($a) {
    in-content-body: $a;
    $a: in-content-body;
  }
  in-style-rule: $a;
}

