<===> mixin/input.scss
@import "midstream";

@include a;

<===> mixin/_midstream.scss
@forward "upstream";

<===> mixin/_upstream.scss
@mixin a() {b {c: d}}

<===> mixin/output.css
b {
  c: d;
}

<===>
================================================================================
<===> variable_assignment/input.scss
@import "midstream";

$a: new value;

b {c: get-a()}

<===> variable_assignment/_midstream.scss
@forward "upstream";

<===> variable_assignment/_upstream.scss
$a: old value;

@function get-a() {@return $a}

<===> variable_assignment/output.css
b {
  c: new value;
}

